<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fake_home_wallpaper">

    <!-- Status Bar Area (fake) -->
    <LinearLayout
        android:id="@+id/fakeStatusBar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#CC000000"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:gravity="center_vertical">

        <!-- Left side - Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <!-- Center spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Right side - Battery, WiFi, etc -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¶ ðŸ“¶ ðŸ”‹"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fakeStatusBar"
        android:layout_above="@id/dockArea"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Time and Date Widget -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:34"
                    android:textSize="48sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:shadowColor="#80000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4" />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wed, Dec 13"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

            </LinearLayout>

            <!-- App Grid -->
            <GridLayout
                android:id="@+id/appsGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="3"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true">

                <!-- Apps will be added programmatically -->

            </GridLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Dock Area -->
    <LinearLayout
        android:id="@+id/dockArea"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dock_background"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp">

        <!-- Dock Apps (commonly used apps) -->
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:src="@android:drawable/ic_menu_call"
            android:background="@drawable/dock_app_background"
            android:padding="8dp"
            android:contentDescription="Phone" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:src="@android:drawable/ic_dialog_email"
            android:background="@drawable/dock_app_background"
            android:padding="8dp"
            android:contentDescription="Messages" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="@drawable/dock_app_background"
            android:padding="8dp"
            android:contentDescription="Browser" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@drawable/dock_app_background"
            android:padding="8dp"
            android:contentDescription="Camera" />

    </LinearLayout>

</RelativeLayout>
