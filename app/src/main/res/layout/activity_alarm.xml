<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alarm_background"
    android:keepScreenOn="true">

    <!-- Animated Background Effect -->
    <View
        android:id="@+id/flashOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alarm_flash"
        android:alpha="0" />

    <!-- Main Alarm Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Warning Icon -->
        <ImageView
            android:id="@+id/iconWarning"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_warning"
            android:layout_marginBottom="24dp"
            android:contentDescription="Security Warning" />

        <!-- Alarm Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🚨 SECURITY BREACH 🚨"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Alarm Message -->
        <TextView
            android:id="@+id/txtAlarmMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UNAUTHORIZED DEVICE MOVEMENT DETECTED"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <!-- Trigger Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/alarm_card_background"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📋 Alert Details"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtTriggerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trigger: Motion Detection"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtTriggerTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time: 12:34:56 PM"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtTriggerDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motion magnitude: 8.5 (High sensitivity)"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- PIN Entry Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/pin_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔐 Enter PIN to Disarm"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/editAlarmPin"
                    android:layout_width="200dp"
                    android:layout_height="56dp"
                    android:hint="Enter PIN"
                    android:inputType="numberPassword"
                    android:maxLength="6"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/pin_background"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/text_hint_light"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDisarmAlarm"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:text="DISARM"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_disarm"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="16dp"
                        android:elevation="4dp" />

                    <Button
                        android:id="@+id/btnSnoozeAlarm"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:text="SNOOZE"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_snooze"
                        android:textColor="@android:color/white"
                        android:elevation="4dp" />

                </LinearLayout>

                <!-- PIN Attempts Warning -->
                <TextView
                    android:id="@+id/txtPinWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Warning: 3 attempts remaining"
                    android:textSize="12sp"
                    android:textColor="@color/warning_color"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnViewEvidence"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:text="📷 VIEW EVIDENCE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/button_evidence"
                android:textColor="@android:color/white"
                android:layout_marginEnd="16dp"
                android:elevation="4dp" />

            <Button
                android:id="@+id/btnEmergencyCall"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:text="📞 EMERGENCY"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/button_emergency"
                android:textColor="@android:color/white"
                android:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/status_bar_background"
        android:padding="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🛡️ Anti-Theft Security"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAlarmDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱️ 00:30"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/txtEvidenceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📷 Capturing..."
            android:textSize="12sp"
            android:textColor="@color/evidence_active"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Emergency Overlay (Hidden by default) -->
    <LinearLayout
        android:id="@+id/emergencyOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/emergency_background"
        android:visibility="gone"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📞 EMERGENCY MODE"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device location and evidence being sent to emergency contacts"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnCancelEmergency"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="CANCEL EMERGENCY"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_cancel_emergency"
            android:textColor="@android:color/white"
            android:elevation="8dp" />

    </LinearLayout>

</RelativeLayout>
