<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Main Image View -->
    <ImageView
        android:id="@+id/imageViewFullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Evidence Image" />

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progressLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@android:color/white" />

    <!-- Top Overlay -->
    <LinearLayout
        android:id="@+id/topOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@drawable/overlay_gradient_top"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:tint="@android:color/white"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/txtImageTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Evidence Image"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_more_vert"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:tint="@android:color/white"
                android:contentDescription="Menu"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Image Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/txtImageInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dec 13, 2024 14:35:21 â€¢ 1.2 MB"
                android:textSize="14sp"
                android:textColor="@color/text_secondary_light"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtSessionInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“± Motion Detection Triggered"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_light"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Overlay -->
    <LinearLayout
        android:id="@+id/bottomOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/overlay_gradient_bottom"
        android:padding="16dp">

        <!-- Image Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/semi_transparent_black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Evidence Details"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtEvidenceDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Session ID: EVD_1234567890_123\nTrigger: Motion Detection\nCamera: Front Camera\nResolution: 1920x1080"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Share"
                android:textSize="12sp"
                android:background="@drawable/button_evidence"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_share"
                android:drawablePadding="4dp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:text="Delete"
                android:textSize="12sp"
                android:background="@drawable/button_disarm"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_delete"
                android:drawablePadding="4dp"
                android:gravity="center" />

            <Button
                android:id="@+id/btnZoom"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Zoom"
                android:textSize="12sp"
                android:background="@drawable/button_secondary"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_zoom_in"
                android:drawablePadding="4dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Navigation Arrows -->
    <ImageView
        android:id="@+id/btnPrevious"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_chevron_left"
        android:background="@drawable/navigation_button_background"
        android:padding="16dp"
        android:tint="@android:color/white"
        android:contentDescription="Previous Image"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_chevron_right"
        android:background="@drawable/navigation_button_background"
        android:padding="16dp"
        android:tint="@android:color/white"
        android:contentDescription="Next Image"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <!-- Zoom Controls -->
    <LinearLayout
        android:id="@+id/layoutZoomControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/btnZoomIn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_zoom_in"
            android:background="@drawable/zoom_button_background"
            android:padding="12dp"
            android:tint="@android:color/white"
            android:contentDescription="Zoom In"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/btnZoomOut"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_zoom_out"
            android:background="@drawable/zoom_button_background"
            android:padding="12dp"
            android:tint="@android:color/white"
            android:contentDescription="Zoom Out"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Metadata Panel (Hidden by default) -->
    <ScrollView
        android:id="@+id/metadataPanel"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:background="@color/semi_transparent_black"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š Image Metadata"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/txtMetadata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading metadata..."
                android:textSize="12sp"
                android:textColor="@color/text_secondary_light"
                android:fontFamily="monospace"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Error Message -->
    <LinearLayout
        android:id="@+id/layoutError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_error"
            android:tint="@color/error_color"
            android:layout_marginBottom="16dp"
            android:contentDescription="Error" />

        <TextView
            android:id="@+id/txtError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Failed to load image"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The evidence file may have been moved or deleted"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_light"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:background="@drawable/button_evidence"
            android:textColor="@android:color/white"
            android:paddingHorizontal="24dp" />

    </LinearLayout>

</RelativeLayout>
