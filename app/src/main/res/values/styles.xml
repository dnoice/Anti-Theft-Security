<!-- File: app/src/main/res/values/styles.xml -->

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/background_primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Alarm Activity Theme -->
    <style name="AlarmTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/alarm_background</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/alarm_background</item>
        <item name="android:navigationBarColor">@color/alarm_background</item>
    </style>

    <!-- Fullscreen Image Theme -->
    <style name="FullscreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Fake Home Screen Theme -->
    <style name="FakeHomeTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/fake_home_wallpaper</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ButtonSecondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonArm" parent="ButtonPrimary">
        <item name="android:background">@drawable/button_arm</item>
    </style>

    <style name="ButtonDisarm" parent="ButtonPrimary">
        <item name="android:background">@drawable/button_disarm</item>
    </style>

    <style name="ButtonEmergency" parent="ButtonPrimary">
        <item name="android:background">@drawable/button_emergency</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Text Styles -->
    <style name="TextHeading1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextHeading2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextHeading3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextBody1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Alarm Text Styles -->
    <style name="AlarmTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="AlarmMessage">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Card Styles -->
    <style name="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="CardViewFlat" parent="CardView">
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CardViewRaised" parent="CardView">
        <item name="cardElevation">8dp</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PinEditText" parent="EditTextStyle">
        <item name="android:inputType">numberPassword</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:maxLength">6</item>
    </style>

    <!-- Switch Styles -->
    <style name="SwitchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlActivated">@color/primary_color</item>
    </style>

    <!-- Seek Bar Styles -->
    <style name="SeekBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:thumbTint">@color/primary_color</item>
    </style>

    <!-- Status Text Styles -->
    <style name="StatusArmed">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/status_armed</item>
    </style>

    <style name="StatusDisarmed">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/status_disarmed</item>
    </style>

    <style name="StatusAlarm">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/status_alarm</item>
    </style>

    <!-- Icon Button Styles -->
    <style name="IconButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="IconButtonWhite" parent="IconButton">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="IconButtonPrimary" parent="IconButton">
        <item name="android:tint">@color/primary_color</item>
    </style>

    <!-- Evidence Item Styles -->
    <style name="EvidenceItemCard" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Statistics Text Style -->
    <style name="StatisticsText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Section Header Style -->
    <style name="SectionHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Feature Item Style -->
    <style name="FeatureItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Progress Bar Styles -->
    <style name="ProgressBarLight">
        <item name="android:indeterminateTint">@android:color/white</item>
    </style>

    <style name="ProgressBarPrimary">
        <item name="android:indeterminateTint">@color/primary_color</item>
    </style>

    <!-- Spinner Style -->
    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Alert Dialog Styles -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <!-- Overlay Styles -->
    <style name="OverlayGradientTop">
        <item name="android:background">@drawable/overlay_gradient_top</item>
    </style>

    <style name="OverlayGradientBottom">
        <item name="android:background">@drawable/overlay_gradient_bottom</item>
    </style>

    <!-- Fake Home Screen Styles -->
    <style name="FakeHomeIcon">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/app_icon_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="FakeAppName">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="FloatingActionButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/fab_background</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

</resources>
